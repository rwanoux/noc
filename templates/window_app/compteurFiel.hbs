<form id="compteurs" class="flexcol">
    <div id="effets">

        <h2>Effets de Fiels
            {{#if isGM}}
            <a id="addEffect" data-tooltip="ajouter un effet de fiel"><i
                    class="fas fa-add"></i></a>
            {{/if}}</h2>

        {{#each object.effetActif as |effect|}}
        <div class="effect" data-effect-id="{{effect.id}}">
            <p class="effetName">
                <span data-tooltip="{{effect.description}}">{{effect.name}}</span>
                {{#if ../isGM}}<a class="deleteEffect" data-tooltip="supprimer
                    cet effet"><i class="fas fa-minus"></i></a>{{/if}}
            </p>
            {{#if ../isGM}}
            <p class="gmNotes">
                {{effect.gmNotes}}
            </p>
            {{/if}}
        </div>

        {{/each}}
    </div>
    <div id="fiel">
        <div class="flexrow goutteControls">
            {{#if isGM}}
            <a id="gouttePlus" data-tooltip="ajouter une goutte"><i
                    class="fa-solid fa-droplet"></i></a>
            <a id="goutteMoins" data-tooltip="enlever une goutte"><i
                    class="fa-solid fa-droplet-slash"></i></a>
            {{/if}}
        </div>
        <div id="aiguille">
        </div>
        <span id="menace">{{object.menace}}</span>

    </div>



</form>